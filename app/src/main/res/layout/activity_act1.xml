<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- VideoView para el video introductorio -->
    <VideoView
        android:id="@+id/introVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ColumnaImagenes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ColumnaImagenes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imagen1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/act1_1"
                android:contentDescription="Imagen 1"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/act1_2"
                android:contentDescription="Imagen 2"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/act1_3"
                android:contentDescription="Imagen 3"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/imagen4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/act1_4"
                android:contentDescription="Imagen 4"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/imagen5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/act1_5"
                android:contentDescription="Imagen 5"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ColumnaTextos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ColumnaTextos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/texto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tximinoak"
                android:gravity="center"
                android:padding="16dp"
                android:background="#CCCCCC"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palmondoak eta zuhaitzak"
                android:gravity="center"
                android:padding="16dp"
                android:background="#CCCCCC"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/texto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hontza"
                android:gravity="center"
                android:padding="16dp"
                android:background="#CCCCCC"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/texto4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etxea"
                android:gravity="center"
                android:padding="16dp"
                android:background="#CCCCCC"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/texto5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iturria"
                android:gravity="center"
                android:padding="16dp"
                android:background="#CCCCCC"
                android:layout_margin="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
