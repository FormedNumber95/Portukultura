<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act6DnD">

    <!-- Guías verticales -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.57" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gVer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <!-- Guías horizontales -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/gHor2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gHor3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <!-- Contenedor horizontal para imágenes -->
    <LinearLayout
        android:id="@+id/logos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/gHor3"
        app:layout_constraintEnd_toEndOf="@id/gVer3"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gHor1">

        <!-- Imágenes horizontales -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/logo"/>

        <ImageView
            android:id="@+id/upv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/upv" />

        <ImageView
            android:id="@+id/icjardin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/icjardin" />
    </LinearLayout>

    <!-- Imágenes principales -->
    <ImageView
        android:id="@+id/pan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/terraza"
        app:layout_constraintEnd_toStartOf="@+id/gVer2"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/gVer1"
        app:layout_constraintTop_toBottomOf="@+id/logos"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/pan" />

    <ImageView
        android:id="@+id/terraza"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/equipo"
        app:layout_constraintEnd_toStartOf="@+id/gVer2"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/gVer1"
        app:layout_constraintTop_toBottomOf="@+id/pan"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/terraza6" />

    <ImageView
        android:id="@+id/equipo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/casa"
        app:layout_constraintEnd_toStartOf="@+id/gVer2"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/gVer1"
        app:layout_constraintTop_toBottomOf="@+id/terraza"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/equipo6" />

    <ImageView
        android:id="@+id/casa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOfOf="@+id/gHor3"
        app:layout_constraintEnd_toStartOf="@+id/gVer2"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/gVer1"
        app:layout_constraintTop_toBottomOf="@+id/equipo"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/casa6" />

    <!-- Textos principales -->
    <TextView
        android:id="@+id/arrautz_ospetsu_hau_pilota_forma_du_eta_ogiarekin_zerbitzatzen_da"
        android:layout_width="183dp"
        android:layout_height="56dp"
        android:text="@string/arrautz_ospetsu_hau_pilota_forma_du_eta_ogiarekin_zerbitzatzen_da"
        app:layout_constraintBottom_toTopOf="@id/taberna_honen_aurrean_canillako_tren_geltokia_dago"
        app:layout_constraintEnd_toStartOf="@+id/gVer4"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/gVer3"
        app:layout_constraintTop_toBottomOf="@+id/gHor3" />

    <TextView
        android:id="@+id/taberna_honen_aurrean_canillako_tren_geltokia_dago"
        android:layout_width="175dp"
        android:layout_height="68dp"
        android:text="@string/taberna_honen_aurrean_canillako_tren_geltokia_dago"
        app:layout_constraintBottom_toTopOf="@id/taberna_honen_jabeak_beraien_bezeroak_oso_ondo_zaintzeaz_ospea_dute"
        app:layout_constraintEnd_toStartOf="@+id/gVer4"
        app:layout_constraintStart_toStartOf="@+id/gVer3"
        app:layout_constraintTop_toBottomOf="@id/arrautz_ospetsu_hau_pilota_forma_du_eta_ogiarekin_zerbitzatzen_da" />

    <TextView
        android:id="@+id/taberna_honen_jabeak_beraien_bezeroak_oso_ondo_zaintzeaz_ospea_dute"
        android:layout_width="186dp"
        android:layout_height="70dp"
        android:text="@string/taberna_honen_jabeak_beraien_bezeroak_oso_ondo_zaintzeaz_ospea_dute"
        app:layout_constraintBottom_toTopOf="@id/taberna_hau_santa_maria_basilikaren_beheko_aldean_kokatuta_dago"
        app:layout_constraintEnd_toStartOf="@+id/gVer4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gVer3"
        app:layout_constraintTop_toBottomOf="@id/taberna_honen_aurrean_canillako_tren_geltokia_dago" />

    <TextView
        android:id="@+id/taberna_hau_santa_maria_basilikaren_beheko_aldean_kokatuta_dago"
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:text="@string/taberna_hau_santa_maria_basilikaren_beheko_aldean_kokatuta_dago"
        app:layout_constraintBottom_toBottomOf="@id/gHor2"
        app:layout_constraintEnd_toStartOf="@+id/gVer4"
        app:layout_constraintStart_toStartOf="@+id/gVer3"
        app:layout_constraintTop_toBottomOf="@id/taberna_honen_jabeak_beraien_bezeroak_oso_ondo_zaintzeaz_ospea_dute" />

</androidx.constraintlayout.widget.ConstraintLayout>



